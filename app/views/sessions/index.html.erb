<p id="notice"><%= notice %></p>

<h1>Sessions</h1>

<div class="container">
  <div class="row">
    <div class="col-md-10">
      <%= month_calendar do |date| %>
      <%= link_to date, new_session_path %>
      <% end %>
    </div>
    <div class="col-md-2">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Start time</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @session.each  do |session| %>
          <tr>
            <td><%= link_to session.name, session %></td>
            <td><%= session.start_time %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'New Session', new_session_path %>
    </div>
  </div>
</div>
